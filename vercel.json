{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/(api|admin)(/.*)?",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg|webp|ico|json|txt))",
      "dest": "client/public/$1"
    },
    {
      "src": "/",
      "dest": "client/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "client/public/index.html"
    }
  ]
}
